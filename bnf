<formula> ::= ( <formula> )
            | <simple_formula> <formula_tail>

<simple_formula> ::= "forall" <variable> . <formula>
                  | "exists" <variable> . <formula>
                  | "not" <formula>
                  | <predicate>(<term>, ...)

<formula_tail> ::= "and" <formula>
                 | "or" <formula>
                 | "=>" <formula>
                 | Îµ

<term> ::= <variable>
         | <function>(<term>, ...)

<predicate> ::= <identifier>

<function> ::= <identifier>

<variable> ::= <identifier>

<identifier> ::= <letter>*
